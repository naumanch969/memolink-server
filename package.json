{
  "name": "memolink-server",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "worker": "nodemon --exec ts-node src/worker.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:worker": "node dist/worker.js",
    "test": "jest",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "lint": "eslint src/**/*.ts"
  },
  "lint-staged": {
    "*.ts": "eslint --fix"
  },
  "keywords": [
    "express",
    "mongodb",
    "memo",
    "api",
    "journaling",
    "life-tracking"
  ],
  "author": "",
  "license": "ISC",
  "description": "Backend server for MemoLink - Personal journaling and life tracking application",
